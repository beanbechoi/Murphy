unit CInfoTextPane;interface	uses		TCL, InfoIntf;implementation	procedure CInfoTextPane.IInfoTextPane (anEnclosure: CView; aSupervisor: CBureaucrat; aWidth: Integer; aHeight: Integer; aHEncl: Integer; aVEncl: Integer; aHSizing: SizingOption; aVSizing: SizingOption);	begin		IPane(anEnclosure, aSupervisor, aWidth, aHeight, aHEncl, aVEncl, aHSizing, aVSizing);		itsText := '';		itsColor := myGrayColor;	end;	procedure CInfoTextPane.setText (aString: str255);	begin		itsText := aString;	end;	function CInfoTextPane.getText: str255;	begin		getText := itsText;	end;	procedure CInfoTextPane.setColor (aColor: RGBColor);	begin		itsColor := aColor;	end;	function CInfoTextPane.getColor: RGBColor;	begin		getColor := itsColor;	end;	procedure CInfoTextPane.Draw (var area: Rect);		var			w, textStart, rSide, lSide, y: integer;			r: rect;	begin		prepare;		RGBForeColor(myBlackColor);		LongToQDRect(frame, r);		fillRect(r, black);		if itsText <> '' then			begin				lSide := r.left + 2;				rSide := r.right - 2;				y := r.bottom - 5;				RGBForeColor(itsColor);				textStart := 12;				w := stringWidth(itsText);				while w > 130 do					begin						textStart := textStart - 1;						textSize(textStart);						w := stringWidth(itsText);					end;				textStart := (((rSide - lSide) - w) div 2) + lSide;				moveTo(lSide, y - 4);				lineTo(textStart - 5, y - 4);				moveTo(textStart, y);				drawString(itsText);				moveTo(textStart + w + 4, y - 4);				lineTo(rSide, y - 4);				textSize(12);			end;	end;end.