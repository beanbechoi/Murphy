unit CInfoDir;interface	uses		CDirector, CGamePane, InfoIntf;implementation	procedure CInfoDir.IInfoDir (aSuperviser: CDirectorOwner);	begin		IDirector(aSuperviser);		activateWindOnResume := true;		new(itsWindow);		itsWindow.INewWindow(POffsetRect(screenbits.bounds, 0, 20), true, kWindowProcID, false, false, gDesktop, self);		new(CGamePane(itsMainPane));		CGamePane(itsMainPane).IGamePane(itsWindow, self);	end;	procedure CInfoDir.Deactivate;	begin		inherited Deactivate;	end;	procedure CInfoDir.Activate;	begin		itsWindow.changeSize(screenbits.bounds.right, screenbits.bounds.bottom - 20);		inherited Activate;	end;	procedure CInfoDir.Free;	begin		itsMainPane.free;		inherited free;	end;	procedure CInfoDir.DoCommand (theCommand: longint);	begin		inherited DoCommand(theCommand);	end;end.