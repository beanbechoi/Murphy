unit MenuBars;interface	const		MBarHeightPtr = $BAA;	type		IntePtr = ^integer;	var		uMenuBarHidden: boolean;	procedure InitMenuBars;	procedure HideMenuBar (var w: WindowPtr);	procedure ShowMenuBar (var w: WindowPtr);implementation	var		gOldMenuBarHeight: integer;		gAar42Va: rect;	procedure InitMenuBars;	begin		uMenuBarHidden := false;		with gAar42Va do			begin				top := screenBits.bounds.top;				bottom := screenBits.bounds.top + IntePtr(MBarHeightPtr)^;				left := screenBits.bounds.left;				right := screenBits.bounds.right;			end;	end;	procedure HideMenuBar (var w: WindowPtr);		var			mBarRect: rect;			mBarRgn: RgnHandle;	begin		gOldMenuBarHeight := IntePtr(MBarHeightPtr)^;		IntePtr(MBarHeightPtr)^ := 0;		SetRect(mBarRect, screenBits.bounds.left, screenBits.bounds.top, screenbits.bounds.right, screenbits.bounds.top + gOldMenuBarHeight);		mBarRgn := NewRgn;		RectRgn(mBarRgn, mBarRect);		UnionRgn(w^.visRgn, mBarRgn, w^.visRgn);		DisposeRgn(mBarRgn);		FillRect(gAar42Va, black);	end;	procedure ShowMenuBar (var w: WindowPtr);	begin		IntePtr(MBarHeightPtr)^ := gOldMenuBarHeight;		DrawMenuBar;	end;end.