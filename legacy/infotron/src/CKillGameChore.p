unit CKillGameChore;interface	uses		TCL, InfoIntf;implementation	procedure CKillGameChore.IKillGameChore;	begin		IInfoChore(1, 1);	{doesn't matter}		myIdent := kKillGameChore;	end;	procedure CKillGameChore.Perform (var maxSleep: longint);		var			appStat: InfoStatus;	begin		appStat := CInfoApp(gapplication).GetInfoStatus;		CInfoApp(gapplication).SetInfoStatus(appStat - [isPlaying]);		CInfoApp(gapplication).KillChores;		ShowCursor;{remove;}	end;end.