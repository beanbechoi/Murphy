unit CExit;interface	uses		TCL, GridPieceIntf;implementation	function CExit.WalkOnto (x, y: integer): boolean;		var			aa: AnimArray;			count: integer;			mx, my: integer;	begin		WalkOnto := FALSE;		CInfoApp(gapplication).GetMurphy.GetLoc(mx, my);		if CInfoApp(gApplication).GetMurphy.NumInfosLeft < 1 then			begin				WalkOnto := FALSE;				for count := 1200 to 1211 do					begin						CInfoApp(CInfoApp(gApplication)).GetGPane.GetBoard.SetData(mx, my, count);						CInfoApp(CInfoApp(gApplication)).GetGPane.GetBPane.DrawOne(mx, my);					end;				CInfoApp(gApplication).GetMurphy.WonGame;			end;	end;	procedure CExit.initPiece;	begin		inherited initPiece;		destructable := true;	end;end.