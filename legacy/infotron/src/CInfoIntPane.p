unit CInfoIntPane;interface	uses		TCL, InfoIntf;implementation	procedure CInfoIntPane.IInfoIntPane (anEnclosure: CView; aSupervisor: CBureaucrat; aWidth: Integer; aHeight: Integer; aHEncl: Integer; aVEncl: Integer; aHSizing: SizingOption; aVSizing: SizingOption);	begin		IPane(anEnclosure, aSupervisor, aWidth, aHeight, aHEncl, aVEncl, aHSizing, aVSizing);		itsValue := -1;		numDigits := 0;		itsColor := myGrayColor;	end;	procedure CInfoIntPane.setNumDigits (aNum: integer);	begin		numDigits := aNum;	end;	function CInfoIntPane.getNumDigits: integer;	begin		getNumDigits := numDigits;	end;	procedure CInfoIntPane.setValue (aValue: integer);	begin		itsValue := aValue;	end;	function CInfoIntPane.getValue: integer;	begin		getValue := itsValue;	end;	procedure CInfoIntPane.setColor (aColor: RGBColor);	begin		itsColor := aColor;	end;	function CInfoIntPane.getColor: RGBColor;	begin		getColor := itsColor;	end;	procedure CInfoIntPane.draw (var area: rect);		var			ones, tens, hundreds, thousands, tenthousands, result: integer;			alReady: boolean;			r: rect;	begin		prepare;		RGBForeColor(myBlackColor);		LongToQDRect(frame, r);		fillRect(r, black);		if itsValue >= 0 then			begin				if itsValue > 9999 then					tenThousands := itsValue div 10000				else					tenThousands := 0;				result := itsValue mod 10000;				if itsValue > 999 then					thousands := result div 1000				else					thousands := 0;				result := result mod 1000;				if itsValue > 99 then					hundreds := result div 100				else					hundreds := 0;				result := result mod 100;				if itsValue > 9 then					tens := result div 10				else					tens := 0;				ones := result mod 10;				alReady := false;				moveTo(r.left + 2, r.bottom - 5);				textSize(12);				RGBForeColor(itsColor);				if (tenThousands <> 0) or (numDigits = 5) then					begin						drawChar(chr(tenthousands + 48));						alReady := true;					end;				if (thousands <> 0) or (numDigits = 4) or alReady then					begin						drawChar(chr(thousands + 48));						alReady := true;					end;				if (hundreds <> 0) or (numDigits = 3) or alReady then					begin						drawChar(chr(hundreds + 48));						alReady := true;					end;				if (tens <> 0) or (numDigits = 2) or alReady then					drawChar(chr(tens + 48));				drawChar(chr(ones + 48));			end;	end;end.