unit QAssert;{4.0}{a simple-minded assertion unit for Pascal, to make sure things work well.}interfaceuses PascalSucks;	procedure Assert (b: boolean; s: str255);	procedure _ASSERT (b: boolean);implementation	procedure Assert (b: boolean; s: str255);	begin		{if not b then			begin				SysBeep(10);				ShowText;				writeln('Assertion Failed!');				writeln(s);				while button do					;				while not button do					;				while button do					;				ExitToShell;			end;}	end;	procedure _DEBUG;	inline		$A9FF;	procedure _ASSERT (b: boolean);	begin	{less braindead.}		if not b then			begin				SysBeep(10);				_DEBUG;			end;	end;end.