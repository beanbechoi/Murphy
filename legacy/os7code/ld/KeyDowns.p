unit KeyDowns;{4.0}{Unit to figure out which modifier keys, etc. are being held down}interface	function OptionKey: boolean;	function CommandKey: boolean;	function ShiftKey: boolean;	function CtrlKey: boolean;	procedure ShowKeys;implementation	procedure ShowKeys;		var			k: KeyMap;			c: integer;	begin		GetKeys(k);		for c := 0 to 127 do			if k[c] then				writeln(c);	end;	function OptionKey: boolean;		var			k: KeyMap;	begin		GetKeys(k);		OptionKey := k[58];	end;	function CommandKey: boolean;		var			k: KeyMap;	begin		GetKeys(k);		CommandKey := k[55];	end;	function ShiftKey: boolean;		var			k: KeyMap;	begin		GetKeys(k);		ShiftKey := k[56];	end;	function CtrlKey: boolean;		var			k: KeyMap;	begin		GetKeys(k);		CtrlKey := k[59];	end;end.